<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hc.mall.manageservice.mapper.SkuSaleAttrValueMapper">
    
    <resultMap id="skuSaleAttrValueMap" type="com.hc.mall.bean.SkuSaleAttrValue" autoMapping="true">
        <id property="id" column="id"></id>
    </resultMap>
    
    <select id="selectSkuSaleAttrValueListBySpu" resultMap="skuSaleAttrValueMap">
        select
                sale_attr_value_id,
                sku_id,
                sale_attr_value_name
            from
                sku_sale_attr_value ssav,
                sku_info si
            where
                ssav.sku_id = si.id
                AND si.spu_id = #{0}
                ORDER BY si.id ,ssav.sale_attr_id
    </select>
</mapper>